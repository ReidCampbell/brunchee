<div class="submit-review"style="margin-top:10px;">
  <%= simple_form_for ([booking, review]) do |f| %>
    <label for="review">How was your brunch?</label><br>
    <%= f.label :rating %>
    <%= f.select :rating, options_for_select([["Please select one", ""], 5, 4, 3, 2, 1]) %>

    <%= f.input :content, placeholder:"Please enter your comment here" %>
    <%= f.submit "Submit your review", class: "btn btn-default" %> <br><br>
  <% end %>
</div>
