
<div class="container">
  <h1 class="mt-4"><%= @venue.name %></h1>
  <i></i><h3><%= @venue.address %></h3>
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-md-7">
      <img src="https://picsum.photos/id/1080/300/200" alt="" style="width:600px;">
      <p class="my-4"><%= @venue.description %></p>

    </div>
      <!-- <div class="col-xs-12 col-sm-6 col-md-3"> -->


    <div class="col-xs-12 col-sm-6 col-md-4 d-flex flex-column mx-4">
      <div class="bookings-card p-4">
        <% if user_signed_in? %>
        <%= render 'book_venue_form' %>
        <% else user_signed_in? %>
        <%=  render 'book_venue_form' %>
        <% end %>
      </div>

      <div class="show_map"
        id="map"
        style="width: 100%;
        height: 50vh;margin-top:20px;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
  </div>
</div>


