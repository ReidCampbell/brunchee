
<div class="container">
  <div class="containery"style="margin-top:100px;">
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-md-7">

        <div class="show-card">
          <h1><%= @venue.name %></h1>
              <i class="fas fa-map-marker-alt" style="color: #ccc"></i>
              <h3><%= @venue.address %></h3>

              <p>Amount: <%= humanized_money_with_symbol(@venue.price) %></p>
            </div>

            <%= image_tag(@venue.photos, size: 300) %>
              <div>


                  <ul class="nav nav-tabs">
                    <li class="active"><a data-toggle="tab" href="#home">OVERVIEW</a></li>
                    <li><a data-toggle="tab" href="#menu1">HOURS</a></li>
                    <li><a data-toggle="tab" href="#menu2">REVIEWS</a></li>
                    <li><a data-toggle="tab" href="#menu3">MENU</a></li>
                  </ul>

                  <div class="tab-content">
                    <div id="home" class="tab-pane fade in active">
                      <p class="my-4"><%= @venue.description %></p>
                    </div>
                    <div id="menu1" class="tab-pane fade">
                      <h3>OPENING TIMES</h3>
                      <p>Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.</p>
                    </div>
                    <div id="menu2" class="tab-pane fade">
                      <h3>REVIEWS</h3>
                      <p>Sed ut perspiciatis unde omnis iste natus error sit voluptatem accusantium doloremque laudantium, totam rem aperiam.</p>
                    </div>
                    <div id="menu3" class="tab-pane fade">
                      <h3>MENU</h3>
                      <p>Eaque ipsa quae ab illo inventore veritatis et quasi architecto beatae vitae dicta sunt explicabo.</p>
                    </div>
                  </div>
                </div>

        </div>
      </div>


      <div class="col-xs-12 col-sm-6 col-md-4 d-flex flex-column">
        <div class="bookings_card">
          <% if user_signed_in? %>
          <%= render 'book_venue_form' %>
          <% else user_signed_in? %>
          <%=  render 'book_venue_form' %>
          <% end %>
        </div>

        <!-- <div class="show_map"
          id="map"
          style="width: 100%;
          height: 50vh;margin-top:20px;margin-bottom:20px;"
          data-markers="<%= @markers.to_json %>"
          data-mapbox-api-key="<%#= ENV['MAPBOX_API_KEY'] %>">
        </div> -->
      </div>
    </div>
  </div>
</div>


<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
