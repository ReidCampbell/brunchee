<div class="index-container">
  <div class="containery">
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-md-4">
        <div class="card p-4"style="width:250px;">
          <h2 style="color:#303841;">Filters</h2>
          <hr>
            <div class="filter-search" style="color:#3A4750;">
              <h4 class="py-2">Neighborhood</h4>
              <% @neighborhoods = ['Barking', 'Barnet', 'Battersea', 'Beckenham', 'Bethnal Green', 'Bromley' ] %>
                <% @neighborhoods.each do |neighborhood| %>
                  <div class="checkbox">
                    <input type="checkbox" value="neighborhood"/>
                    <label><%= neighborhood %></label>
                  </div>
                <% end %>


          <button type="button" class="btn" data-toggle="collapse" data-target="#demo" style="color:#BE3144;font-size:20px;"><i class="fas fa-plus-square"></i></button>
