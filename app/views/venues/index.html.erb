                </div>
                <div class="checkbox">
                  <input type="checkbox" value="rating"/>
                  <label>1 star</label>
                </div>
              <hr>
              <h4 class="py-2">Cuisine</h4>
                <% @cuisines = ['All', 'British', 'Brazilian', 'Chinese', 'Italian', 'Mediterrean'] %>
                <% @cuisines.each do |cuisine| %>
                  <div class="checkbox">
                    <input type="checkbox" value="cuisine"/>
                    <label><%= cuisine %></label>
                  </div>
                <% end %>
              <button type="button" class="btn" data-toggle="collapse" data-target="#demo" style="color:#BE3144;font-size:20px;"><i class="fas fa-plus-square"></i></button>
              <div id="demo" class="collapse">
               <% @cuisines = ['Carribean', 'Japanese', 'Lebanese', 'Korean', 'Turkish' ] %>
                  <% @cuisines.each do |cuisine| %>
                    <div class="checkbox">
                      <input type="checkbox" value="cuisine"/>
                      <label><%= cuisine %></label>
                    </div>
                  <% end %>
              </div>

              <hr>
              <h4 class="py-2">Style</h4>
                <% @styles = ['Casual dining', 'Café', 'Pubs', 'Bars', 'Fine Dining'] %>
                <% @styles.each do |style| %>
                  <div class="checkbox">
                    <input type="checkbox" value="style"/>
                    <label><%= style %></label>
                  </div>
                <% end %>
            </div>
          </div>
        </div>
      </div>
