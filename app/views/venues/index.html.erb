<div class="index-container">
  <div class="containery">
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-md-3">
        <div class="filter_card">
          <h2 style="color:#303841;">Filters</h2>
          <hr>
          <div class="filter-search" style="color:#3A4750;">
            <h4 class="py-2">Neighborhood</h4>
            <!--  <% @neighborhoods = ['Barking', 'Barnet', 'Battersea', 'Beckenham', 'Bethnal Green', 'Bromley' ] %> -->
            <% @venues.each do |venue| %>
              <div class="checkbox">
                <input type="checkbox" value="neighborhood"/>
                <label><%= venue.neighborhood %></label>
              </div>
            <% end %>
            <button type="button" class="btn" data-toggle="collapse" data-target="#demo" style="color:#42A6C7;font-size:20px;"><i class="fas fa-plus-square"></i></button>
            <div id="demo" class="collapse">
             <% @neighborhoods = ['Camberwell', 'Camden', 'Chelsea', 'Chingford', 'Chingford', 'Clapham', 'Croydon', 'Dagenham', 'Deptford', 'Ealing', 'East Ham', 'Enfield' ] %>
              <% @neighborhoods.each do |neighborhood| %>
                <div class="checkbox">
                  <input type="checkbox" value="neighborhood"/>
                  <label><%= neighborhood %></label>
                </div>
              <% end %>
            </div>
            <hr>
            <h4>Price range (£)</h4>
            <div class="range">
              <input type="range" min="1" max="4" steps="1" value="1">
            </div>
            <ul class="range-labels">
              <li class="active selected">£</li>
              <li>££</li>
              <li>£££</li>
              <li>££££</li>
            </ul>
            <br>
            <hr>

            <h4 class="py-2">Rating</h4>
              <div class="checkbox">
                <input type="checkbox" value="rating"/>
                <label>5 stars</label>
              </div>
              <div class="checkbox">
                <input type="checkbox" value="rating"/>
                <label>4 stars</label>
              </div>
              <div class="checkbox">
                <input type="checkbox" value="rating"/>
                <label>3 stars</label>
              </div>
              <div class="checkbox">
                <input type="checkbox" value="rating"/>
                <label>2 stars</label>
              </div>
              <div class="checkbox">
                <input type="checkbox" value="rating"/>
                <label>1 star</label>
            </div>
            <hr>
            <h4 class="py-2">Cuisine</h4>
            <% @cuisines = ['All', 'British', 'Brazilian', 'Chinese', 'Italian', 'Mediterrean'] %>
            <% @venues.each do |venue| %>
              <div class="checkbox">
                <input type="checkbox" value="cuisine"/>
                <label><%= venue.cuisine %></label>
              </div>
            <% end %>
            <button type="button" class="btn" data-toggle="collapse" data-target="#demo" style="color:#42A6C7;font-size:20px;"><i class="fas fa-plus-square"></i></button>
            <div id="demo" class="collapse">
             <% @cuisines = ['Carribean', 'Japanese', 'Lebanese', 'Korean', 'Turkish' ] %>
              <% @cuisines.each do |cuisine| %>
                <div class="checkbox">
                  <input type="checkbox" value="cuisine"/>
                  <label><%= cuisine %></label>
                </div>
              <% end %>
            </div>
            <hr>
            <h4 class="py-2">Style</h4>
            <% @styles = ['Casual dining', 'Café', 'Pubs', 'Bars', 'Fine Dining'] %>
            <% @styles.each do |style| %>
              <div class="checkbox">
                <input type="checkbox" value="style"/>
                <label><%= style %></label>
              </div>
            <% end %>
          </div>
        </div>
      </div>
