<div class="container"style="margin-top:80px;">

  <div class="row">
<!--     <div class="d-flex flex-column">
 -->
      <div class="col-xs-12 col-sm-6 col-md-3">
        <div class="profile-card align-items-stretch">
          <div class="image-user">
            <img src="<%= current_user.photo %>" alt="profile image" style="width:100%;height:150px; object-fit: cover;">
            <div class="text-left mt-4 mx-4">
              <h3><%= @user.first_name %></h3>
              <h3><%= @user.last_name %></h3>
            </div>
          </div>
          <hr>
          <div class="column">
            <p><%= @user.email %></p>
          </div>
        </div>
      <!-- </div>

      <div class="col-md-3"> -->
        <ul class="list-group">
          <li class="list-group-item">
            <button class="tablinks" onclick="openCity(event, 'Edit')">Edit Profile</button>
          </li>
          <li class="list-group-item">
            <button class="tablinks" onclick="openCity(event, 'Upcoming')">Upcoming Brunches</button>
          </li>
          <li class="list-group-item">
            <button class="tablinks" onclick="openCity(event, 'Saved')">Saved Brunches</button>
          </li>
          <li class="list-group-item">
            <button class="tablinks" onclick="openCity(event, 'Past')">Previous Brunches</button>
          </li>
          <li class="list-group-item">
            <%= link_to destroy_user_session_path, method: :delete do %>
              Log out
            <% end %>
          </li>
        </ul>
      </div>
    <!-- </div> -->


    <div class="col-xs-12 col-sm-6 col-md-9">
      <div id="Edit" class="tabcontent">
        <div class="show-card">
          <%# FORM FOR UPDATING PROFILE  %>
          <%= simple_form_for(current_user) do |f| %>
            <%= f.error_notification %>
            <%= f.input :first_name  %>
            <%= f.input :last_name %>
            <%= f.input :photo %>
            <%= f.input :photo_cache, as: :hidden %>
            <%= f.submit 'Save', class: "btn btn btn-primary" %>
          <% end %>
        </div>
      </div>


      <div id="Upcoming" class="tabcontent">
          <section class="venues">
            <!-- <div class="container-fluid"> -->
              <h3>Upcoming Brunches</h3>
              <div class="Cards">
                <div class="Cards__grid">
                  <% @upcoming_venues.each do |booking| %>
                    <div class="grid-item">
                      <p> &nbsp; Party size: <br>  &nbsp; <%= booking.party_size %></p>
                      <p> &nbsp; Date: <br>  &nbsp; <%= DateFormat.change_to(booking.date, "ONLY_DATE_SHORTEST") %>
                        <%= DateFormat.change_to(booking.date, "MEDIUM_TIME") %>
                      </p>

                      <%= render 'shared/card', venue: booking.venue %>

                    </div>
                  <% end %>
                </div>
              </div>
          </section>
      </div>

      <div id="Saved" class="tabcontent">
        <section class="venues">
          <!-- <div class="container-fluid"> -->
          <h3>Saved Brunches</h3>
            <div class="Cards">
              <div class="Cards__grid">
                <% current_user.favorites.each do |favorite| %>
                  <div class="grid-item">
                    <%= render 'shared/card', venue: favorite.venue %>
                  </div>
                <% end %>
              </div>
            </div>
        </section>
      </div>

      <div id="Past" class="tabcontent">
        <section class="venues">
          <!-- <div class="container-fluid"> -->
          <h3>Previous Brunches</h3>
            <div class="Cards">
              <div class="Cards__grid">
                <% @past_venues.each do |booking| %>
                  <div class="grid-item">
                    <%= render 'shared/card', venue: booking.venue %>
                    <%= render "reviews/form", booking: booking, review: Review.new %>
                  </div>
                <% end %>
              </div>
            </div>
        </section>
      </div>
    </div>

  </div>
</div>




<script>
function openCity(evt, cityName) {
  var i, tabcontent, tablinks;
  tabcontent = document.getElementsByClassName("tabcontent");
  for (i = 0; i < tabcontent.length; i++) {
    tabcontent[i].style.display = "none";
  }
  tablinks = document.getElementsByClassName("tablinks");
  for (i = 0; i < tablinks.length; i++) {
    tablinks[i].className = tablinks[i].className.replace(" active", "");
  }
  document.getElementById(cityName).style.display = "block";
  evt.currentTarget.className += " active";
}
</script>
